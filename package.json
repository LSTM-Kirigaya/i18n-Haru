{
    "name": "i18n-haru",
    "displayName": "i18n Haru",
    "description": "A better i18n extension for Vscode to develop js, ts, vue and so on",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.94.0"
    },
    "l10n": "l10n",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:vue",
        "onLanguage:javascript",
        "onLanguage:html",
        "onLanguage:php",
        "onLanguage:rust",
        "onLanguage:json",
        "onLanguage:yaml"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "i18n-haru.helloWorld",
                "title": "%i18n-haru.helloWorld.title%"
            },
            {
                "command": "i18n-haru.configure-i18n-folder",
                "title": "%i18n-haru.configure-i18n-folder.title%"
            },
            {
                "command": "i18n-haru.goto-undefined-key",
                "title": "%i18n-haru.goto-undefined-key.title%"
            },
            {
                "command": "i18n-haru.add-token",
                "title": "%i18n-haru.add-token.title%"
            },
            {
                "command": "i18n-haru.delete-token",
                "title": "%i18n-haru.delete-token.title%",
                "icon": {
                    "dark": "icons/dark/i18n-delete.svg",
                    "light": "icons/light/i18n-delete.svg"
                }
            }
        ],
        "configuration": {
            "title": "i18n-Haru",
            "properties": {
                "i18n-haru.root": {
                    "type": "string",
                    "default": "i18n",
                    "description": "%i18n-haru.root.title%"
                },
                "i18n-haru.main": {
                    "type": "string",
                    "description": "%i18n-haru.main.title%"
                },
                "i18n-haru.display": {
                    "type": "string",
                    "description": "%i18n-haru.display.title%"
                },
                "i18n-haru.format": {
                    "type": "string",
                    "description": "%i18n-haru.format.title%"
                },
                "i18n-haru.line-hint-max-length": {
                    "type": "number",
                    "default": 10,
                    "description": "%i18n-haru.line-hint-max-length.title%"
                },
                "i18n-haru.t-quote": {
                    "type": "string",
                    "default": "'",
                    "description": "%i18n-haru.t-quote.title%"
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "command": "i18n-haru.add-token",
                    "when": "editorHasSelection"
                }
            ],
            "editor/title": [
                {
                    "command": "i18n-haru.delete-token",
                    "when": "editorLangId == json",
                    "group": "navigation@1"
                }
            ]
            
        },
        "keybindings": [
            {
                "command": "i18n-haru.add-token",
                "key": "alt+i",
                "mac": "alt+i",
                "when": "editorHasSelection"
            }
        ],
        "icons": {
            "i18n-icon": {
                "description": "i18n icon",
                "default": {
                    "fontPath": "./icons/iconfont.woff2",
                    "fontCharacter": "\\e639"
                }
            },
            "delete-i18n-icon": {
                "description": "delete i18n icon",
                "default": {
                    "fontPath": "./icons/iconfont.woff2",
                    "fontCharacter": "\\e63a"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.94.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    },
    "dependencies": {
        "chokidar": "^4.0.1",
        "js-yaml": "^4.1.0",
        "jsonc-parser": "^3.3.1"
    }
}